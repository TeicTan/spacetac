{
  "name": "spacetac",
  "version": "0.1.0",
  "description": "A tactical RPG set in space",
  "main": "src/build.js",
  "scripts": {
    "deps": "bower install && typings install",
    "build": "tsc -p .",
    "test": "karma start spec/support/karma.conf.js && remap-istanbul -i out/coverage/coverage.json -o out/coverage -t html",
    "build-test": "npm run build && npm run test",
    "serve": "simple-server out 8012"
  },
  "repository": {
    "type": "git",
    "url": "https://code.thunderk.net/michael/spacetac.git"
  },
  "author": "Michael Lemaire",
  "license": "MIT",
  "devDependencies": {
    "bower": "~1.8",
    "jasmine": "~2.5",
    "karma": "~1.3",
    "karma-coverage": "~1.1",
    "karma-jasmine": "~1.1",
    "karma-phantomjs-launcher": "~1.0",
    "remap-istanbul": "~0.6",
    "simple-server": "~1.0",
    "typescript": "~2.1",
    "typings": "~1.4"
  }
}